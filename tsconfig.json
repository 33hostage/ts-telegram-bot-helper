{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    // ===============================================
    // ✅ Ключевые настройки для Vercel/Serverless
    // ===============================================
    "outDir": "./dist",
    "rootDir": "./", // Указывает, что исходные файлы начинаются с корня проекта
    "moduleResolution": "node",
    "resolveJsonModule": true
    // ===============================================
  },
  "include": [
    "api/**/*.ts",
    "src/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}